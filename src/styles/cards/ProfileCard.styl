.profilecard-component
  cursor: pointer
  width: 300px
  height: 400px
  padding-top: 5%
  display: flex
  flex-direction: column
  align-items: center
  box-shadow: 0px 3px 10px rgba( 0, 0, 0, 0.18 );
  border-radius: 5px
  .basic-list
    flex-grow: 1
    display: flex
  .category-list
    flex-grow: 2
    display: flex
    flex-direction: column
    width: inherit
    .category
      text-align: center
      padding: 3%
      border-top: 1px solid #E0E0E0
      transition: 0.3s
      i
        opacity: 0
        // font-size: 20px
        float: right
        transition: 0.3s
      &:hover
        background: #F5F5F5
        i
          opacity: 1
  .footer
    flex-grow: 1
    border-top: 1px solid #E0E0E0
